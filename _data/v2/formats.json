{
  "name": "Format Options",
  "url": null,
  "description": "These options are used to modify returned data. Because these options are global, they appear OUTSIDE of any modules. See the example below",
  "notes": null,
  "parameters": [{
    "key": "format.date.tz",
    "required": null,
    "description": "Modifies most timestamps to convert from UTC into another timezone",
    "type": ["float", "string"],
    "default": null,
    "values": [-600, "Australia/Melbourne"]
  }, {
    "key": "format.date.format",
    "required": null,
    "description": "Modifies how dates are turned. Uses [PHP's Date formatting](http://php.net/date)",
    "type": ["string"],
    "default": "c",
    "values": "Y-m-d H:i:sa"
  }, {
    "key": "format.colour.format",
    "required": null,
    "description": "Changes how colours are returned. **Note the use of the British English spelling of colour (with a 'U')**",
    "type": ["string"],
    "default": "name",
    "values": ["name", "hex"]
  }, {
    "key": "format.units",
    "required": null,
    "description": "Changes how things such as speed, distance etc. are returned",
    "type": ["string"],
    "default": "metric",
    "values": ["metric", "imperial"]
  }],
  "demo": [{
    "name": "Change units and date",
